<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="dev.jojo.agilus.AdminActivity">

    <devlight.io.library.ntb.NavigationTabBar
        android:id="@+id/ntb_vertical"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        app:ntb_badged="true"
        app:ntb_bg_color="@color/colorPrimaryDark"
        app:ntb_preview_colors="@array/vertical_ntb"
        app:ntb_title_mode="active"
        app:ntb_title_size="14sp"
        app:ntb_titled="true" />

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ntb_vertical" />

</RelativeLayout>
