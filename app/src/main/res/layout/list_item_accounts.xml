<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:padding="12dp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ll_accts"
        android:adjustViewBounds="false"
        android:background="@android:drawable/bottom_bar"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/imageView7" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/agilus_graphic" />

    <LinearLayout
        android:id="@+id/ll_accts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView4"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilot Name"
            android:textColor="?attr/colorAccent" />

        <TextView
            android:id="@+id/tvPilotName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView4"
            android:text="Pilot Name"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drone Name"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tvDroneName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvPilotName"
            android:layout_below="@+id/tvPilotName"
            android:text="Drone Name"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="State"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tvIsActiveStat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvDroneName"
            android:layout_below="@+id/tvDroneName"
            android:text="Is Active"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvIsActiveStat"
            android:layout_below="@+id/tvIsActiveStat"
            android:text="--Account Info--"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilot Username"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tvPilotUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView11"
            android:layout_below="@+id/textView11"
            android:text="Pilot Username"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilot Password"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tvPilotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvPilotUsername"
            android:layout_below="@+id/tvPilotUsername"
            android:text="Pilot Password"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imgbtEditPilot"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_above="@+id/imgbtRemovePilot"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:background="@color/colorPrimary"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <ImageButton
        android:id="@+id/imgbtRemovePilot"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_above="@+id/imageView7"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        app:srcCompat="@android:drawable/ic_menu_delete" />


</RelativeLayout>
